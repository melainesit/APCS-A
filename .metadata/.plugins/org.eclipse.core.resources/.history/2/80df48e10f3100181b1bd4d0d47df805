import static java.lang.System.*;

public class AtCounter
{
   private char[][] atMat;
   private int atCount;

	public AtCounter()
	{
		atCount=0;
		atMat = new char[][]{		{'@','-','@','-','-','@','-','@','@','@'},
									{'@','@','@','-','@','@','-','@','-','@'},
									{'-','-','-','-','-','-','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','-','@'},
									{'-','@','-','@','-','@','-','@','-','@'},
									{'@','@','@','@','@','@','-','@','@','@'},
									{'-','@','-','@','-','@','-','-','-','@'},
									{'-','@','@','@','-','@','-','-','-','-'},
									{'-','@','-','@','-','@','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','@','@'}};
	}

	public int countAts(int r, int c)
	{
		if (atMat[r][c] != '@' )
			return 0;
			countAts(r,c);
		if (atMat[r][c] == '@')
			return atCount +=1;
			countAts(r+1,c);
			
		if (atMat[r+1][c]=='@')
			return atCount +=1;
			countAts(r+1,c+1);
			
		if (atMat[r+1][c+1]=='@')
			return atCount +=1;
			countAts(r,c+1);
			
		if (atMat[r][c+1]=='@')
			return atCount +=1;
		else if (atMat[r-1][c]=='@')
			return atCount +=1;
		else if (atMat[r-1][c-1]=='@')
			return atCount +=1;
		else if (atMat[r][c-1]=='@')
			return atCount +=1;

		//add in recursive code to count up the # of @s connected
		//start checking at spot [r,c]


		return atCount;
	}

	public int getAtCount()
	{
		return atCount;
	}

	public String toString()
	{
		String output="";
		output+=getAtCount()+" @s connected.";
		return output;
	}
}