	public String getRandomVerb()
	{
		Random rand = new Random();
		int  v = rand.nextInt(50) + 1;
		
		return verbs.get(v);
	}
	
	public String getRandomNoun()
	{
		Random rand = new Random();
		int  n = rand.nextInt(17) + 1;
		
		return nouns.get(n);
	}
	
	public String getRandomAdjective()
	{
		Random rand = new Random();
		int  a = rand.nextInt(50) + 1;
		
		return nouns.get(a);
	}		

	public String toString()
